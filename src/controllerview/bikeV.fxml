<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllerview.BikeC">
    <GridPane hgap="20" vgap="10">
        <Label text="Rahmennr.:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="tfRahmennr" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <columnConstraints>
            <ColumnConstraints prefWidth="70.0" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
    </GridPane>
    <GridPane hgap="20" vgap="10">
        <Label text="Marke/Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="tfMarkeType" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Text:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="tfText" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <columnConstraints>
            <ColumnConstraints prefWidth="70.0" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
    </GridPane>
    <HBox alignment="CENTER_RIGHT" spacing="20">
        <Button fx:id="btCancel" onAction="#btCancelOnAction" text="Cancel" />
        <Button fx:id="btSelect" onAction="#btSelectOnAction" text="Select" />
        <Button fx:id="btSave" onAction="#btSaveOnAction" text="Save" />
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>